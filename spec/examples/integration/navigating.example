      end
    end
  end

  let(:parser) { Stupidedi::Builder::StateMachine.build(config) }

  def parse(path)
    if rand > 0.5
      parser.read(Stupidedi::Reader.build(File.read(path)))
    else
      File.open(path){|io| parser.read(Stupidedi::Reader.build(io)) }
    end
  end

